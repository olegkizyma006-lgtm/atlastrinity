voice:
  stt:
    model: large-v3-turbo
    device: cpu
    language: uk
  tts:
    engine: ukrainian-tts
    device: cpu
    enabled: true
mcp_enhanced:
  retry_attempts: 3
  connection_timeout: 3600
logging:
  max_log_size: 10485760
  level: INFO
  backup_count: 5
agents:
  grisha:
    vision_model: gpt-4o
    strategy_model: raptor-mini
    max_tokens: 1500
    temperature: 0.3
  atlas:
    model: gpt-4.1
    max_tokens: 2000
    temperature: 0.7
  tetyana:
    reasoning_model: gpt-4o
    model: gpt-4o
    max_tokens: 2000
    temperature: 0.5
    reflexion_model: gpt-4o
mcp:
  # === TIER 1: MUST-HAVE (Ядро системи) ===
  macos_use:
    enabled: true
    permissions:
      accessibility: true
      screen_recording: true

  filesystem:
    deny_write_paths: []
    model: gpt-4o
    repo_write_allowed_subdir: .atlastrinity_runtime
    allowed_paths:
    - ${HOME}
    - /tmp
    enabled: true
    deny_write_repo: true

  sequential_thinking:
    enabled: true
    model: raptor-mini
    max_history_size: 1000

  # === TIER 2: HIGH (Рекомендовані) ===
  vibe:
    enabled: true
    binary: vibe
    workspace: ${CONFIG_ROOT}/vibe_workspace
    timeout_s: 3600
    max_output_chars: 500000
    disallow_interactive: true
  
  memory:
    enabled: true
    chroma_path: ${CONFIG_ROOT}/memory/chroma
    collection_name: atlastrinity_memory

  graph:
    enabled: true
  
  redis:
    enabled: true
    url: redis://localhost:6379/0

  duckduckgo_search:
    enabled: true

  github:
    enabled: true
    # Advanced GitHub API: Pull Requests, Issues, Search, Repository Management.
    # Requires GITHUB_TOKEN in your .env file.

  whisper_stt:
    enabled: true
    model: large-v3-turbo
    language: uk

  devtools:
    enabled: true
    ruff_enabled: true
    oxlint_enabled: true
    knip_enabled: true
    pyrefly_enabled: true

  # === TIER 3: ADDITIONAL (Додаткові) ===
  puppeteer:
    enabled: true
    headless: true

  # === TIER 4: SPECIALIZED (Спеціалізовані / Дебаг) ===
  chrome_devtools:
    enabled: true

  context7:
    enabled: false # External documentation server

orchestrator:
  task_timeout: 3600
  max_recursion_depth: 5
  subtask_timeout: 120
  user_input_timeout: 20
  validate_failed_steps_with_grisha: false # set to true to enable Auditor verification on fail
  recovery_voice_agent: "atlas"            # which agent explains the recovery strategy
security:
  dangerous_commands:
  - rm -rf
  - mkfs
  - dd if=
  - ':(){ :|:& };:'
  require_confirmation: true

system:
  workspace_path: ${CONFIG_ROOT}/workspace
  repository_path: ${PROJECT_ROOT}
api:
  timeout: 60
  retry_count: 3

database:
  url: sqlite+aiosqlite:///${CONFIG_ROOT}/atlastrinity.db

state:
  redis_url: ${REDIS_URL} # usually redis://localhost:6379/0

