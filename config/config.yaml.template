# AtlasTrinity Configuration (synced from project)
# Синхронізовано: 2026-01-10 20:02:27

voice:
  stt:
    model: large-v3-turbo
    device: cpu
    language: uk
  tts:
    engine: ukrainian-tts
    device: cpu
    enabled: true
mcp_enhanced:
  retry_attempts: 3
  connection_timeout: 30
logging:
  max_log_size: 10485760
  level: INFO
  backup_count: 5
agents:
  grisha:
    vision_model: gpt-4o
    strategy_model: raptor-mini
    max_tokens: 1500
    temperature: 0.3
  atlas:
    model: gpt-5-mini
    max_tokens: 2000
    temperature: 0.7
  tetyana:
    reasoning_model: gpt-4.1
    model: gpt-4.1
    max_tokens: 2000
    temperature: 0.5
    reflexion_model: gpt-4.1
mcp:
  # === TIER 1: MUST-HAVE (Ядро системи) ===
  macos_use:
    enabled: true
    permissions:
      accessibility: true
      screen_recording: true

  filesystem:
    deny_write_paths: []
    model: gpt-4o
    repo_write_allowed_subdir: .atlastrinity_runtime
    allowed_paths:
    - ${HOME}
    - /tmp
    enabled: true
    deny_write_repo: true

  sequential_thinking:
    enabled: true
    max_history_size: 1000

  # === TIER 2: HIGH (Рекомендовані) ===
  vibe:
    enabled: true
    binary: vibe
    workspace: ${CONFIG_ROOT}/vibe_workspace
    timeout_s: 1200
    max_output_chars: 500000
    disallow_interactive: true
  chrome_devtools:
    enabled: true
  memory:
    enabled: true

  graph:
    enabled: true
  
orchestrator:
  task_timeout: 3600
  max_recursion_depth: 5
  subtask_timeout: 120
security:
  dangerous_commands:
  - rm -rf
  - mkfs
  - dd if=
  - ':(){ :|:& };:'
  require_confirmation: true

puppeteer:
  enabled: true
  headless: true

system:
  workspace_path: ~/Developer/Trinity
api:
  timeout: 60
  retry_count: 3
